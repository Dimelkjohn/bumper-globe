<%- include("partials/navbar"); %>
<%- include("partials/header") %> 

<div class="page">
    <div class="banner schedule-banner">
        <h1>Schedule Service</h1>
    </div>

    <div class="content-area">
        <div class="content">
            <p>
                <i class="fa-sharp fa-solid fa-circle-info icon"></i> Please select a date to begin your scheduling process (same day scheduling is not allowed)
                <br>
                <i class="fa-sharp fa-solid fa-circle-info icon"></i> Dates containing texts in the color <i class="fa-solid fa-circle icon"></i> signify active appointments 
                on that day, yours will appear like so too!
            </p>

            <div id="calendar"></div>

            <button class="events" value="<%= JSON.stringify(db_events) %>"></button>


            <!-- Modalllll -->
            <div class="modal fade" id="scheduling-modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content schedule-modal">

                    <div class="modal-header">
                      <h1 class="modal-title fs-5 modal-form-title" id="exampleModalLabel"></h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <form id="schedule-form" action="/schedule-service" method="POST">
                            <div class="mb-3">
                                <label for="time" class="form-label">Time*</label>
                                <select class="form-select weekday" aria-label="Default select example" id="time" name="time" required>
                                    <option value="Select Time" selected>Select Time</option>
                                    <option value="8:00am-9:30am">8:00am-9:30am</option>
                                    <option value="9:30am-11:00am">9:30am-11:00am</option>
                                    <option value="11:00am-12:30pm">11:00am-12:30pm</option>
                                    <option value="12:30pm-02:00pm">12:30pm-02:00pm</option>
                                    <option value="02:00pm-03:30pm">02:00pm-03:30pm</option>
                                    <option value="03:30pm-05:00pm">03:30pm-05:00pm</option>
                                </select>

                                <select class="form-select weekend" aria-label="Default select example" id="time" name="time" required>
                                    <option value="Select Time" selected>Select Time</option>
                                    <option value="9:00am-10:30am">9:00am-10:30am</option>
                                    <option value="10:30am-12:00pm">10:30am-12:00pm</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="fName" class="form-label">First Name*</label>
                                <input type="text" class="form-control" id="fName" placeholder="John" name="fName" required>
                            </div>

                            <div class="mb-3">
                                <label for="lName" class="form-label">Last Name*</label>
                                <input type="text" class="form-control" id="lName" placeholder="Dimelu" name="lName" required>
                            </div>
        
                            <div class="mb-3">
                              <label for="email" class="form-label">Email*</label>
                              <input type="email" class="form-control" id="email" placeholder="john@dimelu.com" name="email" required>
                            </div>
        
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone Number*</label>
                                <input type="tel" class="form-control" id="phone" placeholder="(###)-###-####" name="phone" required>
                            </div>

                            <div class="mb-3">
                                <label for="address" class="form-label">Address*</label>
                                <input type="text" class="form-control" id="address" placeholder="845 S. Hanover St Baltimore, MD 21230" name="address" required>
                            </div>

                            <div class="mb-3">
                                <label for="v-year" class="form-label">Vehicle Year*</label>
                                <input type="text" class="form-control" id="v-year" placeholder="2015" name="v_year" required>
                            </div>

                            <div class="mb-3">
                                <label for="v-make" class="form-label">Vehicle Make*</label>
                                <input type="text" class="form-control" id="v-make" placeholder="Toyota" name="v_make" required>
                            </div>

                            <div class="mb-3">
                                <label for="v-model" class="form-label">Vehicle Model*</label>
                                <input type="text" class="form-control" id="v-model" placeholder="Prius" name="v_model" required>
                            </div>

                            <div class="mb-3">
                                <label for="i-company" class="form-label">Insurance Company*</label>
                                <input type="text" class="form-control" id="i-company" placeholder="Medicare" name="i_company" required>
                            </div>

                            <div class="mb-3">
                                <label for="i-claim" class="form-label">Claim Number*</label>
                                <input type="text" class="form-control" id="i-claim" placeholder="000-00-0000-A" name="i_claim" required>
                            </div>

                            <div class="mb-3">
                                <label for="desc" class="form-label">Brief Description of Vehicle Damage*</label>
                                <textarea class="form-control" id="desc" name="desc" rows="8" placeholder="What is the problem with the vehicle?" required></textarea>
                            </div>

                            <button type="submit" class="btn btn-primary fu-btn form-submit" name="date">Submit</button>  
                        </form>
                    </div>

                    <!-- <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <button type="button" class="btn btn-primary">Submit</button>
                    </div> -->
                  </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer-content") %> 
<%- include("partials/footer") %> 